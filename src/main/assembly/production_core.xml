<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>akka</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/deploy</outputDirectory>
			<includes>
				<include>${artifactId}*.jar</include>
			</includes>
		</fileSet>
    <fileSet>
      <directory>${project.basedir}/config</directory>
      <outputDirectory>/config</outputDirectory>
      <includes>
        <include>tooe_actor_deployment*.conf</include>
      </includes>
      <excludes>
        <exclude>tooe_actor_deployment_graph_cluster.conf</exclude>
        <exclude>tooe_actor_deployment_graph.conf</exclude>
      </excludes>
    </fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib/tooe</outputDirectory>
			<excludes>
				<exclude>*:${artifactId}*</exclude>
			</excludes>
            <includes>
                <include>*:jar</include>
            </includes>
   		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<!-- <source>${project.build.outputDirectory}/akka/bin/akka</source> -->
      <source>${project.basedir}/run/akka</source>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>744</fileMode>
		</file>
		<file>
			<source>${project.basedir}/run/start_tooe.sh</source>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>744</fileMode>
		</file>
    <file>
      <source>${project.basedir}/config/prod_core_application.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
		<file>
			<source>${project.basedir}/config/application.conf</source>
			<outputDirectory>/config</outputDirectory>
		</file>
    <file>
      <source>${project.basedir}/config/tooe_remote_cluster.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/tooe_http.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/tooe_payment.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/tooe_external.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/tooe_images.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/tooe_job.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/tooe_cdn.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/tooe_welcome_present.conf</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/database.properties</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/log4j.properties</source>
      <outputDirectory>/config</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/config/environment.properties</source>
      <outputDirectory>/config</outputDirectory>
    </file>
	</files>
</assembly>